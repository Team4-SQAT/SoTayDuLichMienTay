        }

        .pd-img {
            position: absolute;
            top: 5%;
            left: 5%;
            height: 90%;
            width: 90%;
        }

            .pd-img:hover {
                opacity: 0.5;
            }

        .pd-des {
            position: absolute;
            bottom: 0;
            height: 0;
            width: 100%;
            background-color: black;
            overflow: hidden;
            transition: height 1s;
            opacity: 0.5;
